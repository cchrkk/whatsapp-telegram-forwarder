# File di esempio per le variabili d'ambiente
# Copiare questo file in .env e configurare i valori appropriati

# Token del bot Telegram (obbligatorio)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# ID della chat Telegram di destinazione (obbligatorio)
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Elenco separato da virgole di ID chat WhatsApp consentiti (opzionale)
ALLOWED_CHAT_IDS=chat_id_1,chat_id_2

# Elenco separato da virgole di nomi chat WhatsApp consentiti (opzionale)
ALLOWED_CHAT_NAMES=Contact Name 1,Group Name 1

# Livello di logging (opzionale, valori: error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# Abilita/disabilita l'inoltro di immagini (opzionale, default: true)
FORWARD_IMAGES=true

# Abilita/disabilita l'inoltro di video (opzionale, default: true)
FORWARD_VIDEOS=true

# Abilita/disabilita l'inoltro di documenti (opzionale, default: true)
FORWARD_DOCUMENTS=true

# Abilita/disabilita l'inoltro di audio (opzionale, default: true)
FORWARD_AUDIO=true

# Dimensione massima dei file (opzionale, default: 20MB)
MAX_FILE_SIZE=20MB

# Abilita/disabilita la conservazione della formattazione (opzionale, default: true)
PRESERVE_FORMATTING=true

# Abilita/disabilita l'inclusione dei metadati nei messaggi (opzionale, default: true)
INCLUDE_METADATA=true

# Abilita/disabilita il proxy per WhatsApp (opzionale, default: false)
WHATSAPP_PROXY_ENABLED=false

# URL del proxy per WhatsApp (opzionale)
WHATSAPP_PROXY_URL=

# Abilita/disabilita il proxy per Telegram (opzionale, default: false)
TELEGRAM_PROXY_ENABLED=false

# URL del proxy per Telegram (opzionale)
TELEGRAM_PROXY_URL=